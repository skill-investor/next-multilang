{
  "name": "next-multilingual",
  "description": "An opinionated end-to-end solution for Next.js applications that requires multiple languages.",
  "version": "0.8.4",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./config": "./lib/config/index.js",
    "./link": "./lib/link/index.js",
    "./link/ssr": "./lib/link/ssr.js",
    "./head": "./lib/head/index.js",
    "./head/ssr": "./lib/head/ssr.js",
    "./messages": "./lib/messages/index.js",
    "./messages/babel-plugin": "./lib/messages/babel-plugin.js"
  },
  "typesVersions": {
    "*": {
      "config": [
        "lib/config/index.d.ts"
      ],
      "link": [
        "lib/link/index.d.ts",
        "lib/link/ssr.d.ts"
      ],
      "head": [
        "lib/head/index.d.ts",
        "lib/head/ssr.d.ts"
      ],
      "messages": [
        "lib/messages/index.d.ts",
        "lib/messages/babel-plugin.d.ts"
      ]
    }
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "Next",
    "Next js",
    "Next.js",
    "multilingual",
    "i18n",
    "internationalization",
    "intl",
    "localization",
    "l10n",
    "globalization",
    "g11n",
    "ICU",
    "MessageFormat"
  ],
  "author": "Avansai (https://avansai.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avansai/next-multilingual.git"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=13"
  },
  "watch": {
    "build": {
      "patterns": "*",
      "extensions": "*.ts?(x)",
      "ignore": "node_modules"
    }
  },
  "scripts": {
    "build_watch": "npm-watch",
    "build": "rm -Rf ./lib && tsc",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix",
    "release": "dotenv -- release-it --only-version"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "dot-properties": "^1.0.1",
    "intl-messageformat": "^9.9.6",
    "nookies": "^2.5.2",
    "resolve-accept-language": "^1.0.39"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/babel__core": "^7.1.16",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "dotenv-cli": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "v12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.1",
    "next": "v12.0.4",
    "npm-watch": "^0.11.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^14.11.8",
    "typescript": "4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/Avansai/next-multilingual/issues"
  },
  "homepage": "https://github.com/Avansai/next-multilingual#readme",
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib"
  }
}
