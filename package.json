{
  "name": "next-multilingual",
  "description": "An opinionated end-to-end solution for Next.js applications that requires multiple languages.",
  "version": "0.9.1",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./config": "./lib/config/index.js",
    "./link": "./lib/link/index.js",
    "./link/ssr": "./lib/link/ssr.js",
    "./head": "./lib/head/index.js",
    "./head/ssr": "./lib/head/ssr.js",
    "./messages": "./lib/messages/index.js",
    "./messages/babel-plugin": "./lib/messages/babel-plugin.js"
  },
  "typesVersions": {
    "*": {
      "config": [
        "lib/config/index.d.ts"
      ],
      "link": [
        "lib/link/index.d.ts",
        "lib/link/ssr.d.ts"
      ],
      "head": [
        "lib/head/index.d.ts",
        "lib/head/ssr.d.ts"
      ],
      "messages": [
        "lib/messages/index.d.ts",
        "lib/messages/babel-plugin.d.ts"
      ]
    }
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "Next",
    "Next js",
    "Next.js",
    "multilingual",
    "i18n",
    "internationalization",
    "intl",
    "localization",
    "l10n",
    "globalization",
    "g11n",
    "ICU",
    "MessageFormat"
  ],
  "author": "Avansai (https://avansai.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avansai/next-multilingual.git"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=13"
  },
  "watch": {
    "build": {
      "patterns": "*",
      "extensions": "*.ts?(x)",
      "ignore": "node_modules"
    }
  },
  "scripts": {
    "build_watch": "npm-watch",
    "build": "rm -Rf ./lib && tsc",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix",
    "next-lint": "cd example && next lint",
    "release": "dotenv -- release-it --only-version",
    "start-example": "cd example && npm run dev",
    "start-example-build": "cd example && npm run build && npm run start",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test start-example http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test start-example http://localhost:3000 cypress:headless",
    "e2e:build": "start-server-and-test start-example-build http://localhost:3000 cypress",
    "e2e:build:headless": "start-server-and-test start-example-build http://localhost:3000 cypress:headless"
  },
  "dependencies": {
    "@babel/core": "^7.16.7",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.16",
    "dot-properties": "^1.0.1",
    "intl-messageformat": "^9.11.1",
    "nookies": "^2.5.2",
    "resolve-accept-language": "^1.0.43"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/babel__core": "^7.1.18",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@typescript-eslint/types": "^5.9.0",
    "cypress": "^9.2.0",
    "cypress-fail-on-console-error": "^2.1.3",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.6.0",
    "eslint-config-next": "v12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "next": "v12.0.7",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^14.11.8",
    "start-server-and-test": "^1.14.0",
    "typescript": "4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/Avansai/next-multilingual/issues"
  },
  "homepage": "https://github.com/Avansai/next-multilingual#readme",
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib"
  }
}
