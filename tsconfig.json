{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib/",
    "declaration": true,
    "strict": true,
    "noImplicitThis": false /** required by `useMessages` and `getMessages` **/
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
